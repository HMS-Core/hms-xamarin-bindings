<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceSuggestionSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="#D3D3D3"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="@string/parameters"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/query_" />

            <EditText
                android:id="@+id/edittext_search_query_pss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint=""
                android:imeOptions="actionGo"
                android:inputType="text"
                android:text="@string/input_query_pss" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_search_location_label" />

            <EditText
                android:id="@+id/edittext_lat_pss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="latitude"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:text="@string/input_latitude" />

            <EditText
                android:id="@+id/edittext_lon_pss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="longitude"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:text="@string/input_longitude" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radius_" />

            <EditText
                android:id="@+id/edittext_radius_pss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint=""
                android:inputType="number"
                android:text="@string/input_radius" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="2dp"
                android:gravity="center_vertical"
                android:text="bounds:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/query_suggestion_bounds_northeast_lat_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:hint="lat"
                android:imeOptions="actionNext"
                android:inputType="numberSigned|numberDecimal"
                android:text="" />

            <EditText
                android:id="@+id/query_suggestion_bounds_northeast_lng_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:hint="lng"
                android:imeOptions="actionNext"
                android:inputType="numberSigned|numberDecimal"
                android:text="" />

            <EditText
                android:id="@+id/query_suggestion_bounds_southwest_lat_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:hint="lat"
                android:imeOptions="actionNext"
                android:inputType="numberSigned|numberDecimal"
                android:text="" />

            <EditText
                android:id="@+id/query_suggestion_bounds_southwest_lng_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:hint="lng"
                android:imeOptions="actionNext"
                android:inputType="numberSigned|numberDecimal"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language_" />

            <EditText
                android:id="@+id/edittext_language_pss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint=""
                android:inputType="text"
                android:text="@string/input_language" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/country_code_" />

            <EditText
                android:id="@+id/edittext_country_code_pss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint=""
                android:inputType="text"
                android:text="@string/input_country_code" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="2dp"
                android:text="@string/children_label"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switch_query_suggestion_children"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="2dp"
                android:text="@string/strictBounds_label"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switch_query_suggestion_strict_bounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_search_place_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_place_suggestion"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="#D3D3D3"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="@string/result"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_pss_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true" />
    </LinearLayout>

</ScrollView>