<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    tools:ignore="MissingDimension">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="4dp"
        android:layout_weight="80">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_weight="85">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:paddingVertical="2dp"
                android:weightSum="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/title"
                    android:textAllCaps="false"
                    android:layout_weight="30"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/txt_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/hmsPush"
                    android:textAlignment="center"
                    android:background="@drawable/edittext_border"
                    android:layout_weight="35"
            />
                <EditText
                    android:id="@+id/txt_tag"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:background="@drawable/edittext_border"
                    android:layout_weight="35"
                    android:hint="@string/tag"
            />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:paddingVertical="2dp"
                android:weightSum="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/message"
                    android:textAllCaps="false"
                    android:layout_weight="30"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/txt_message"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/thisIsLocalNotification"
                    android:textAlignment="center"
                    android:background="@drawable/edittext_border"
                    android:layout_weight="70"
            />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:paddingVertical="2dp"
                android:weightSum="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/bigText"
                    android:textAllCaps="false"
                    android:layout_weight="30"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/txt_bigText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/thisIsABigText"
                    android:textAlignment="center"
                    android:background="@drawable/edittext_border"
                    android:layout_weight="70"
            />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:paddingVertical="2dp"
                android:weightSum="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/subText"
                    android:textAllCaps="false"
                    android:layout_weight="30"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/txt_subText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/thisIsASubText"
                    android:textAlignment="center"
                    android:background="@drawable/edittext_border"
                    android:layout_weight="70"
            />
            </LinearLayout>

            <Button
                android:id="@+id/btn_local_notification_default"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_local_notification"
                android:text="@string/localNotificationDefault"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_margin="8dp"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="3">
                <Button
                    android:id="@+id/btn_ongoing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_local_notification"
                    android:text="@string/ongoing"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/btn_sound"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_local_notification"
                    android:text="@string/sound"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/btn_vibrate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_local_notification"
                    android:text="@string/vibrate"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="3">
                <Button
                    android:id="@+id/btn_bigimage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_local_notification"
                    android:text="@string/bigImage"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/btn_repeat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_local_notification"
                    android:text="@string/Repeat"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/btn_scheduled"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_local_notification"
                    android:text="@string/Scheduled"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="100">
                <Button
                    android:id="@+id/btn_cancelAllNotifications"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_round_background"
                    android:text="@string/cancelAllNotifications"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="50" />
                <Button
                    android:id="@+id/btn_getNotifications"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_round_background"
                    android:text="@string/getNotifications"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="100">
                <Button
                    android:id="@+id/btn_cancelScheduledNotifications"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_round_background"
                    android:text="@string/cancelScheduledNotifications"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="1sp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="50" />
                <Button
                    android:id="@+id/btn_getScheduledLocalNotifications"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_round_background"
                    android:text="@string/getScheduledLocalNotifications"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="1sp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="50"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="100">
                <Button
                    android:id="@+id/btn_cancelNotificationsWithTag"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_round_background"
                    android:text="@string/cancelNotificationsWithTag"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="0.5sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="50" />
                <Button
                    android:id="@+id/btn_getChannels"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_round_background"
                    android:text="@string/getChannels"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="100">
                <Button
                    android:id="@+id/btn_cancelNotifications"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_round_background"
                    android:text="@string/cancelNotifications"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="50"/>
                <Button
                    android:id="@+id/btn_deleteChannel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_round_background"
                    android:text="@string/deleteChannel"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="100">
                <Button
                    android:id="@+id/btn_channelBlocked"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_round_background"
                    android:text="@string/channelBlocked"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="50" />
                <Button
                    android:id="@+id/btn_channelExists"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_round_background"
                    android:text="@string/channelExists"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="50" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">
        <include
            layout="@layout/log_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_action">
        </include>
    </LinearLayout>

</LinearLayout>