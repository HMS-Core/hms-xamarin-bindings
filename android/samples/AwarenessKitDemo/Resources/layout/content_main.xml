<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:id="@+id/rl_main">
    <Button
        android:id="@+id/btn_capture_sample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_round_background"
        android:text="@string/awarenessCaptureSample"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_margin="6dp"
        tools:ignore="ButtonStyle" />
    <Button
        android:id="@+id/btn_barrier_sample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_round_background"
        android:text="@string/awarenessBarrierSample"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_margin="6dp"
        android:layout_below="@id/btn_capture_sample"
        tools:ignore="ButtonStyle" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include
            layout="@layout/log_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </include>
    </LinearLayout>
</RelativeLayout>
