<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <ImageView
        android:id="@+id/image_foreground"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:background="@drawable/document_correct_image">
    </ImageView>

    <ImageView
        android:id="@+id/image_refine_result"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/image_foreground"
        android:layout_width="500dp"
        android:layout_height="300dp">
    </ImageView>

    <Button
        android:id="@+id/image_refine"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@color/upsdk_white"
        android:text="detect"
        android:textColor="@color/emui_color_gray_7">
    </Button>
</RelativeLayout>
