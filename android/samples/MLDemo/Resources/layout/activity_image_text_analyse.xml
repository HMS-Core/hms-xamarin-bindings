
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".text.ImageTextAnalyseActivity">

    <ImageView
        android:id="@+id/text_image"
        android:layout_width="500dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/text_image"></ImageView>

    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="13sp"></TextView>
    <LinearLayout
    android:id="@+id/top_layout_face"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">

            <Button
                android:id="@+id/text_detect"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:background="@color/black"
                android:layout_weight="1"
                android:text="@string/detect_on_device"
                android:textColor="@android:color/white"></Button>
               <Button
                android:id="@+id/remote_text_detect"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:text="@string/detect_on_cloud"
                android:textColor="@android:color/white"></Button>
    </LinearLayout>

</RelativeLayout>