<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".translate.TranslatorActivity">

        <ImageView
            android:id="@+id/voice_play"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/icon_voice_new">
        </ImageView>

        <TextView
            android:id="@+id/file_name"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_below="@id/voice_play"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="add_voice"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/text_output"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/file_name"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_edit_text"
            android:gravity="top"
            android:minLines="5"
            android:padding="5dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/voice_input"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/text_output"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_record"></ImageView>
    <TextView
        android:text="Add Audio File"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_output"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/textView1" />
        

</RelativeLayout>